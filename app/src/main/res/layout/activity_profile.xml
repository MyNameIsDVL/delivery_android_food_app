<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity"
    android:orientation="vertical"
    android:focusableInTouchMode="true">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardBack"
        android:onClick="cardBack"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:cardCornerRadius="25dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:backgroundTint="#FB9300">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="3dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/ic_baseline_arrow_back_ios_24" />

    </androidx.cardview.widget.CardView>

    <ScrollView
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/resedComponent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                app:cardCornerRadius="20dp"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/resendMsg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Prosimy o zweryfikowanie konta!"
                        android:textAlignment="center"
                        android:padding="10dp"
                        android:layout_marginTop="10dp"
                        android:textSize="18dp" />

                    <Button
                        android:id="@+id/btnResendCode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_gravity="center"
                        android:background="@drawable/cart_button_bg"
                        android:text="Zweryfikuj teraz"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardProfileDetiails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                app:cardCornerRadius="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        app:cardCornerRadius="50dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="center">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/profile_img"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:src="@mipmap/ic_default_foreground"
                            android:layout_gravity="center"/>

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/dis_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nazwa użytkownika"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"/>

                    <TextView
                        android:id="@+id/dis_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Email"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"/>

                    <TextView
                        android:id="@+id/dis_phoneNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Numer telefonu"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"/>

                    <TextView
                        android:id="@+id/dis_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Adres dostawy"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardFormEditProfileData"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                app:cardCornerRadius="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="40dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <ImageView
                        android:id="@+id/setImageProfile"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/ic_baseline_add_a_photo_24"
                        android:layout_gravity="center"/>

                    <EditText
                        android:id="@+id/up_UserName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:hint="Nazwa użytkownika"
                        android:drawablePadding="10dp"
                        android:background="@drawable/search_bg"
                        android:drawableLeft="@drawable/ic_baseline_supervised_user_circle_24"
                        android:inputType="textPersonName"
                        android:paddingStart="15dp"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp"
                        android:paddingEnd="15dp"
                        android:textSize="15dp"
                        android:ems="10"
                        android:textColorHint="#FB9300"
                        app:hintTextColor="#FB9300"
                        android:layout_marginTop="20dp"
                        android:textCursorDrawable="@color/design_default_color_error"/>

                    <EditText
                        android:id="@+id/up_Email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:hint="Email"
                        android:drawablePadding="10dp"
                        android:background="@drawable/search_bg"
                        android:drawableLeft="@drawable/ic_baseline_email_24"
                        android:inputType="textEmailAddress"
                        android:paddingStart="15dp"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp"
                        android:paddingEnd="15dp"
                        android:textSize="15dp"
                        android:ems="10"
                        android:textColorHint="#FB9300"
                        app:hintTextColor="#FB9300"
                        android:layout_marginTop="10dp"
                        android:textCursorDrawable="@color/design_default_color_error"/>

                    <EditText
                        android:id="@+id/up_phoneNumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:hint="Telefon kontaktowy"
                        android:drawablePadding="10dp"
                        android:background="@drawable/search_bg"
                        android:drawableLeft="@drawable/ic_baseline_phone_iphone_24"
                        android:inputType="phone"
                        android:paddingStart="15dp"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp"
                        android:paddingEnd="15dp"
                        android:textSize="15dp"
                        android:ems="10"
                        android:textColorHint="#FB9300"
                        app:hintTextColor="#FB9300"
                        android:layout_marginTop="10dp"
                        android:textCursorDrawable="@color/design_default_color_error"/>

                    <EditText
                        android:id="@+id/up_location"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:hint="Adres dostawy"
                        android:drawablePadding="10dp"
                        android:background="@drawable/search_bg"
                        android:drawableLeft="@drawable/ic_baseline_location_on_24"
                        android:inputType="text"
                        android:paddingStart="15dp"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp"
                        android:paddingEnd="15dp"
                        android:textSize="15dp"
                        android:ems="10"
                        android:textColorHint="#FB9300"
                        app:hintTextColor="#FB9300"
                        android:layout_marginTop="10dp"
                        android:textCursorDrawable="@color/design_default_color_error"/>

                    <Button
                        android:id="@+id/update_profile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_gravity="center"
                        android:background="@drawable/cart_button_bg"
                        android:text="Zapisz"
                        android:textStyle="bold"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>